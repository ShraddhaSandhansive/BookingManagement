<input type='text' style="display:none" id ="serviceId" value = {{service.service_id}} />
    <div class="container">
        <div class="row">
            <div class='col-sm-6' style="width:35%; margin-top: -10%">
            <div class="form-group">
            <h4 class="heading"><strong>Select Date</strong> <span></span></h4>
                <div class='input-group date' id='datetimepicker1'>
                    <input type='text' class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
                <div>
                    <input type="submit"  name="submit"  value = "Book" class="txt2" onClick="bookService()" style="margin-left:30%; margin-top:5%">
                </div>
            </div>
        </div>
        <script type="text/javascript">
            $(function () {
                $('#datetimepicker1').datetimepicker({
                enabledHours: [11, 12, 13, 14, 15, 16, 17, 18, 19],
