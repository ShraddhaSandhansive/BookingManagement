    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "pythonPath": "/Users/shraddha/myvenv/venv/bin/python",
            "args": [
                "runserver",
                "--noreload",
                "0.0.0.0:8000"
            ],
            "envFile": "${workspaceFolder}/.env",
            "django": true,
            "debugOptions" : [
                "WaitOnAbnormalExit",
                "WaitOnNormalExit",
                "RedirectOutput",
                "DjangoDebugging"
            ]
        },
    ]
}